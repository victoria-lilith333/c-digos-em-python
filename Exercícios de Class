class Dog:
    def __init__(self, name, breed):
        self.name = name
        self.breed = breed

    def bark(self):
        print(f"Woof! My name is {self.name} and I'm a {self.breed}.")

# Criando uma instância da classe Dog
my_dog = Dog("AMORA", "VIRA LATA")

my_dog.bark()



