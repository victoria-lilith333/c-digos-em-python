num1= int(input("Digite um número:"))
num2=  int(input("Digite um número:"))

opera=  (input ("Qual operação você deseja? (+, -, *, /:"))

if opera == "+" :
    print ("O resultado da adição é:", num1+num2)
elif opera == "-":
    print ("O resultado da subtração:", num1-num2)
elif opera == "*":
    print  ("O resultado da multiplicação:", num1*num2)
elif opera == "/":
    print ("O resultado da divisão:", num1/num2)
else :
    print ("Operação invalida")
